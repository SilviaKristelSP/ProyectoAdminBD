        <Label x:Name="lbTitulo" Content="Registro Persona" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <Label Content="Datos personales" HorizontalAlignment="Left" Margin="92,8,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.Row="1"/>
