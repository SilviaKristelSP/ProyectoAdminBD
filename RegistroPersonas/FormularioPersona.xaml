        <TextBox HorizontalAlignment="Left" Margin="195,93,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>
        <TextBox HorizontalAlignment="Left" Margin="361,43,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="264"/>
        <TextBox HorizontalAlignment="Left" Margin="462,93,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
        <ComboBox HorizontalAlignment="Left" Margin="141,41,0,0" Grid.Row="1" VerticalAlignment="Top" Width="140"/>
        <Label Content="Teléfono de Contacto" HorizontalAlignment="Left" Margin="92,141,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Número" HorizontalAlignment="Left" Margin="91,200,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Label Content="Tipo" HorizontalAlignment="Left" Margin="92,167,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Normal" FontStyle="Normal"/>
        <Label Content="Correo" HorizontalAlignment="Left" Margin="361,163,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Normal" FontStyle="Normal"/>
        <Label Content="Correo Electrónico" HorizontalAlignment="Left" Margin="361,141,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox HorizontalAlignment="Left" Margin="130,169,0,0" Grid.Row="1" VerticalAlignment="Top" Width="193"/>
        <TextBox HorizontalAlignment="Left" Margin="150,204,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
