        <ComboBox HorizontalAlignment="Left" Margin="430,309,0,0" Grid.Row="1" VerticalAlignment="Top" Width="72"/>
        <Button Content="Guardar" HorizontalAlignment="Left" Margin="555,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="122" Click="clicGuardar"/>
